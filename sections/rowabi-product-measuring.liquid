    {% for block in section.blocks %}            
    <img id="img-{{ forloop.index }}" width="100%" height="auto" class="rowabi-h-[415px] {% unless forloop.first %}rowabi-hidden{% endunless %}" src="{{ block.settings.image | img_url: 'master' }}" />
