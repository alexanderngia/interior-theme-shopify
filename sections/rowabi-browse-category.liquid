<style>
  .shopify-category .swiper-mb {
      width: 270px;
      height: 359px;
      padding-top: 20px;
    }

    .shopify-category .swiper-slide {
      width: 270px;
      height: 375px;
    }

    .shopify-category .swiper-slide img {
      display: block;
      /* width: 100%; */
    }
</style>
<div class="rowabi-mt-[32px] md:rowabi-mt-[60px]">
  <{{ section.settings.heading_tag }} style='font-family: "Sainte Colombe", serif;' class="rowabi-text-lg md:rowabi-text-3xl rowabi-text-center rowabi-text-[#444139] rowabi-font-medium">{{ section.settings.title }}</{{ section.settings.heading_tag }}>
  <p class="rowabi-text-sm md:rowabi-text-base rowabi-text-center rowabi-text-[#8C6F51] rowabi-mt-2 md:rowabi-mt-4">{{ section.settings.subheading }}</p>
  <div class="rowabi-hidden md:rowabi-grid rowabi-grid-cols-4 rowabi-gap-[30px] rowabi-mt-[35px] rowabi-max-w-[1176px] rowabi-mx-auto">
    {% for block in section.blocks %}
      <div class="rowabi-flex rowabi-flex-col">
        <img width="100%" height="300px" class="rowabi-w-[270px] rowabi-h-[332px]" src="{{ block.settings.image | img_url: 'master'}}" />
        <a href="{{ block.settings.link }}" class="rowabi-flex rowabi-justify-center">
          <h3 class="rowabi-font-bold rowabi-text-center rowabi-text-[#444139] rowabi-text-[14px] rowabi-w-max rowabi-border-b rowabi-border-[#595343] rowabi-mt-[12px] md:rowabi-mt-[17px] rowabi-py-[6px]">{{ block.settings.label }}</h3>
        </a>
      </div>
    {% endfor %}
  </div>
  
  <!-- mobile version -->
    <div class="md:rowabi-hidden">
      <div class="swiper-mb myCategoryMobile rowabi-px-4">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="swiper-slide">
              <div class="rowabi-flex rowabi-flex-col">
                <img width="100%" height="333px" class="rowabi-w-[270px] rowabi-h-[300px]" src="{{ block.settings.image | img_url: 'master'}}" />
                <a href="{{ block.settings.link }}" class="rowabi-flex rowabi-justify-center">
                  <h3 class="rowabi-font-bold rowabi-text-center rowabi-text-[#444139] rowabi-text-[12px] rowabi-w-max rowabi-border-b rowabi-border-[#595343] rowabi-mt-[12px] md:rowabi-mt-[17px] rowabi-py-[4px] md:rowabi-py-[6px]">{{ block.settings.label }}</h3>
                </a>
              </div>
            </div>
          {% endfor %}
         </div>
      </div>
    </div>
  
  <div class="rowabi-mt-8 md:rowabi-mt-[66px] rowabi-h-[1px] rowabi-bg-[#4441394D] rowabi-w-full rowabi-max-w-[1176px] rowabi-mx-auto"> </div>
  
</div>


<script>
  var swiper = new Swiper(".myCategoryMobile", {
    grabCursor: true,
    slidesPerView: "auto",
    spaceBetween: 30,
  });
</script>

{% schema %}
{
  "name": "Rowabi browse category",
  "class": "shopify-category rowabi-overflow-hidden",
  "tag": "section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "select",
      "id": "heading_tag",
      "label": "Heading tag",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "p",
          "label": "P"
        }
      ],
      "default": "h1"
    },
    {
      "type": "checkbox",
      "id": "separate_section_with_border",
      "label": "t:global.section.separate_section_with_border",
      "default": true
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "t:global.text.subheading",
      "default": "Subheading"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:global.text.heading",
      "default": "Heading"
    },
  ],
  "blocks": [
    {
      "type": "item",
      "name": "t:sections.timeline.blocks.item.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:global.image.image",
          "info": "t:sections.timeline.blocks.item.image_info"
        },
        {
          "type": "inline_richtext",
          "id": "label",
          "label": "t:sections.timeline.blocks.item.label",
          "default": "Shop pendant lights"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rowabi browse category",
    }
  ]
}
{% endschema %}