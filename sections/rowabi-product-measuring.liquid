<div class="rowabi-h-[1px] rowabi-bg-[#44413933] rowabi-my-[32px] md:rowabi-my-[60px]"> </div>

{% if section.settings.show_hover == true %}
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const titles = document.querySelectorAll("[id^='title-']"); // Lấy tất cả các tiêu đề
    const images = document.querySelectorAll("[id^='img-']");   // Lấy tất cả các hình ảnh

    // Hàm đặt lại trạng thái mặc định
    function resetImages() {
        images.forEach((img, index) => {
            if (index === 0) {
                img.classList.remove("rowabi-hidden"); // Hiển thị img-1
            } else {
                img.classList.add("rowabi-hidden"); // Ẩn các img còn lại
            }
        });
    }

    // Đặt trạng thái mặc định ban đầu
    // resetImages();

    // Lặp qua tất cả các tiêu đề
    titles.forEach((title, index) => {
        title.addEventListener("mouseenter", function () {
            images.forEach((img, imgIndex) => {
                if (imgIndex === index) {
                    img.classList.remove("rowabi-hidden"); // Hiển thị ảnh tương ứng
                } else {
                    img.classList.add("rowabi-hidden"); // Ẩn các ảnh khác
                }
            });
        });

        title.addEventListener("mouseleave", function () {
            resetImages(); // Trở lại trạng thái mặc định khi rời chuột khỏi tiêu đề
        });
    });
  });
</script>
{% endif %}
                
